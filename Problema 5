def contar_digitos(numero, digito):
    # Convertir el número a una cadena para poder usar el método count()
    numero_str = str(numero)
    
    # Usar el método count() para contar la cantidad de veces que aparece el dígito en el número
    cantidad = numero_str.count(str(digito))
    
    return cantidad

# Ejemplo de uso de la función
numero_ingresado = 5026505000
digito = 0
cantidad = contar_digitos(numero_ingresado, digito)
print(f"Cantidad de veces {digito} en el número {numero_ingresado}: {cantidad}")