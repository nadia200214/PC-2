# Número de filas en el patrón
num_filas = 5

# Imprime la primera mitad del patrón
for i in range(num_filas):
    for j in range(i + 1):
        print("*", end=" ")
    print()

# Imprime la segunda mitad del patrón
for i in range(num_filas - 1, 0, -1):
    for j in range(i):
        print("*", end=" ")
    print()